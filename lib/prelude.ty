    }
}

class Sync {
    init(x) {
        @x = x
        @mtx = Mutex()
    }

    static swap(x, y) {
        with x.mtx.lock() {
            let old = x.x
            x.x = y
            old
        }
    }

    static read(x) {
        with x.mtx.lock() {
            x.x
        }
    }

    static get(x) {
        x.x
    }

    static set(x, y) {
        with x.mtx.lock() {
            x.x = y
        }
    }

    static lock(x) {
        x.mtx.lock()
    }

    __missing__(name, *args) {
        with @mtx.lock() {
            let f = member(@x, name)
            f(*args)
        }
    }

    ==(y) {
        with @mtx.lock() {
            @x == y
        }
    }

    <=>(y) {
        with @mtx.lock() {
            @x <=> y
        }
    }

    __len__() {
        with @mtx.lock() {
            #@x
        }
    }

    __str__() {
        "{@x}"
    }

    __subscript__(i) {
        with @mtx.lock() {
            @x[i]
        }
    }

    ++() {
        with @mtx.lock() {
            ++(@x)
        }
    }


    --() {
        with @mtx.lock() {
            --(@x)
        }
    }

    +=(y) {
        with @mtx.lock() {
            @x += y
        }
    }

    +(y) {
        with @mtx.lock() {
            @x + y
        }
    }

    *=(y) {
        with @mtx.lock() {
            @x *= y
        }
    }

    *(y) {
        with @mtx.lock() {
            @x * y
        }
    }

    -=(y) {
        with @mtx.lock() {
            @x -= y
        }
    }

    -(y) {
        with @mtx.lock() {
            @x - y
        }
    }

    /=(y) {
        with @mtx.lock() {
            @x /= y
        }
    }

    /(y) {
        with @mtx.lock() {
            @x / y
        }
    }
}

