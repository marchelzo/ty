class Tuple {
    init(*args, %kwargs) {
        tuple(*args, **kwargs)
    }

    __str___() {
        str(self)
    }

    %(t) {
        let myMembers = members(self)
        let tMembers = members(t)

        for k, v in tMembers {
            if let $c = myMembers[k] {
                myMembers[k] = (c.?isTuple() && v.?isTuple()) ? (c % v) : v(c)
            } else {
                myMembers[k] = v(nil)
            }
        }

        tuple(**myMembers)
    }

    isTuple() {
        true
    }

    __drop__() {
        try {
            for i in 0.count() {
                self[i].?__drop__()
            }
        } catch _ :: IndexError;
    }

    __match__(t) {
        let myMembers = members(self)
        let tMembers = members(t)

        if #myMembers.diff(tMembers) != 0 {
            return false
        }

        for k, v in tMembers {
            if !(v :: myMembers[k]) {
                return false
            }
        }

        return true
    }
}

