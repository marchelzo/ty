     }
}

tag Err {
     map()     { self }
     flatMap() { self }
}

class Object {
    init(%props) {
        for k, v in props {
            member(self, k, v)
        }
    }

    is?(c) {
        subclass?(type(self), c)
    }

    drill(path) {
        let x = self

        for i in path {
            x = x[i]
        }

        return x
    }

    members() {
        members(self)
    }

    member(*args) {
        member(self, *args)
    }

    |(other) {
        c -> (c :: self) || (c :: other)
    }

    &(other) {
        c -> (c :: self) && (c :: other)
    }

    !::(x) {
        !(self :: x)
    }

    :>(other) {
        x -> (self(x) :: other)
    }

    <.>(other) {
        (*xs) -> self(other(*xs))
    }

    |>(f) {
        (*xs) -> f(self(*xs))
    }

    __match__(other) {
        self == other
    }

    __question__() {
        (x -> x == nil) | self
    }

    __str__() {
        str(self)
    }

    __fmt__(fmt) {
        str(self)
    }
}

class Class {
    |(other) {
        c -> (c :: self) || (c :: other)
    }

    &(other) {
        c -> (c :: self) && (c :: other)
    }

    __match__(other) {
        type(other) != Class && other.is?(self)
    }
}

