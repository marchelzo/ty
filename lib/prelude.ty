tag None {
     map()     { None }
     flatMap() { None }
}

tag Some {
    map(f) {
        Some(f(self))
    }

    flatMap(f) {
        f(self)
    }

    from(x) {
        match x {
            nil => None,
            _   => Some(x)
        }
    }
}

tag Ok {
     map(f) {
          Ok(f(self))
     }

     flatMap(f) {
